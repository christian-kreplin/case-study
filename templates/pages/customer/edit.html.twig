{% set actionBtn = {link: path('app_customer_add'), label: 'Kunde erstellen'} %}
{% extends 'layouts/base.html.twig' %}

{% block body %}
  <div class="form-wrapper">
    {{ form_start(form, {attr: {class: 'manage more-space'}}) }}
    {% include 'components/pages/item_header.html.twig' with { backLink: path('app_customer_browse')} %}

    <div class="fields">

      <div class="field">
        <input type="text"
               value="{{ field_value(form.name) }}"
               name="{{ field_name(form.name) }}"
               id="{{ field_name(form.name) }}"
               class="default peer"
               placeholder=" "
               required>
        {% include 'components/form/label_for_input.html.twig' with {id: field_name(form.name), text: field_label(form.name)} %}
      </div>
      <div class="field flex items-center">
        {{ form_widget(form.active) }}
        {{ form_label(form.active) }}
      </div>

      <div class="field">
        <div class="custom-label">
          {{ form_label(form.imageFile) }}
        </div>
        {{ form_widget(form.imageFile) }}
      </div>
    </div>
    {{ form_end(form) }}
  </div>

  {% if errors is defined %}
    {% include 'components/dialog/dialog.html.twig' with {title: (errors|length == 1 ? 'Problem' : 'Probleme') ~ ' aufgetreten', message: errors, buttonText: 'OK'} %}
  {% endif %}
{% endblock %}